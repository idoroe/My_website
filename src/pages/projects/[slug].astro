---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import createSlug from "../../lib/createSlug";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: createSlug(project.data.title, project.slug) },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();
const {
  title,
  description,
  heroImage,
  tags,
  category,
  role,
  techStack,
  problem,
  architecture,
  challenges,
  shipped,
  impact,
  liveUrl,
  githubUrl,
  screenshots,
} = project.data;
---

<BaseLayout title={title} description={description} image={heroImage} activeItemID="projects" ogType="article">
  <article class="py-4">
    <!-- Back link -->
    <a href="/projects" class="text-sm text-primary hover:underline mb-6 inline-flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Projects
    </a>

    <!-- Hero Image -->
    {heroImage && (
      <div class="rounded-xl overflow-hidden mb-8 mt-4">
        <img src={heroImage} alt={title} class="w-full h-64 md:h-80 object-cover" />
      </div>
    )}

    <!-- Title & Tags -->
    <h1 class="text-3xl md:text-4xl font-bold mb-3">{title}</h1>
    <div class="flex flex-wrap gap-2 mb-6">
      <span class="badge badge-primary">{category}</span>
      {tags.map((tag) => (
        <span class="badge badge-outline">{tag}</span>
      ))}
    </div>

    <!-- Stats Bar -->
    <div class="flex flex-wrap gap-4 mb-8 p-4 bg-base-200 rounded-xl text-sm">
      {role && (
        <div>
          <span class="text-base-content/50 block">Role</span>
          <span class="font-medium">{role}</span>
        </div>
      )}
      <div>
        <span class="text-base-content/50 block">Category</span>
        <span class="font-medium">{category}</span>
      </div>
      <div class="flex-1"></div>
      {githubUrl && (
        <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          Code
        </a>
      )}
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          Live Demo
        </a>
      )}
    </div>

    <!-- Structured Sections -->
    <div class="space-y-8">
      {problem && (
        <section>
          <h2 class="text-xl font-bold mb-2">The Problem</h2>
          <p class="text-base-content/80">{problem}</p>
        </section>
      )}

      {techStack.length > 0 && (
        <section>
          <h2 class="text-xl font-bold mb-2">Tech Stack</h2>
          <div class="flex flex-wrap gap-2">
            {techStack.map((tech) => (
              <span class="badge badge-lg bg-base-200 border-base-300">{tech}</span>
            ))}
          </div>
        </section>
      )}

      {architecture && (
        <section>
          <h2 class="text-xl font-bold mb-2">Architecture</h2>
          <p class="text-base-content/80">{architecture}</p>
        </section>
      )}

      {challenges && (
        <section>
          <h2 class="text-xl font-bold mb-2">Key Challenges</h2>
          <p class="text-base-content/80">{challenges}</p>
        </section>
      )}

      {shipped && (
        <section>
          <h2 class="text-xl font-bold mb-2">What I Shipped</h2>
          <p class="text-base-content/80">{shipped}</p>
        </section>
      )}

      {impact && (
        <section>
          <h2 class="text-xl font-bold mb-2">Impact</h2>
          <p class="text-base-content/80">{impact}</p>
        </section>
      )}
    </div>

    <!-- MDX Body -->
    <div class="divider my-8"></div>
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Screenshot Gallery -->
    {screenshots && screenshots.length > 0 && (
      <section class="mt-8">
        <h2 class="text-xl font-bold mb-4">Screenshots</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {screenshots.map((src, i) => (
            <div class="rounded-xl overflow-hidden border border-base-300 glow-card bg-base-200">
              <img src={src} alt={`${title} screenshot ${i + 1}`} class="w-full h-auto" loading="lazy" />
            </div>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>
