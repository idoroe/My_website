---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PERSON_NAME } from "../config";
---

<BaseLayout title="Resume" activeItemID="resume">
  <div class="py-4">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-bold">Resume</h1>
      <a
        href="/resume.pdf"
        download
        class="btn btn-primary btn-sm gap-2"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Download PDF
      </a>
    </div>

    <!-- PDF Viewer -->
    <div class="rounded-xl overflow-hidden border border-base-300 mb-8">
      <iframe
        src="/resume.pdf"
        class="w-full h-[80vh]"
        title="Resume PDF"
      ></iframe>
    </div>

    <!-- SEO Text Version -->
    <section class="prose max-w-none">
      <h2>About {PERSON_NAME}</h2>
      <!-- TODO: Replace with your actual resume text for SEO -->
      <p>
        4th-year Software Engineering student with experience in full-stack development,
        machine learning, and DevOps. Proven track record of delivering impactful software
        solutions through internships, academic projects, and open-source contributions.
      </p>

