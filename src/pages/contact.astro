---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SOCIAL_LINKS, PERSON_PHONE, PERSON_LOCATION } from "../config";
---

<BaseLayout title="Contact" activeItemID="contact">
  <div class="py-4">
    <h1 class="text-3xl font-bold mb-2"><span class="gradient-text">Get in Touch</span></h1>
    <p class="text-base-content/60 mb-8">
      Have a question, opportunity, or just want to say hello? Feel free to reach out.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="animate-on-scroll">
        <h2 class="text-xl font-bold mb-4">Send a Message</h2>
        <form
          action="https://formsubmit.co/emmanuelidoro@gmail.com"
          method="POST"
          class="space-y-4"
        >
          <!-- Honeypot spam protection -->
          <input type="text" name="_honey" style="display:none" />
          <!-- Disable captcha page -->
          <input type="hidden" name="_captcha" value="false" />
          <!-- Success redirect -->
          <input type="hidden" name="_next" value={`${Astro.site}contact?success=true`} />

          <div>
            <label for="name" class="label">
              <span class="label-text font-medium">Name</span>
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="input input-bordered w-full"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="label">
              <span class="label-text font-medium">Email</span>
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="input input-bordered w-full"
              placeholder="your@email.com"
            />
          </div>

          <div>
            <label for="subject" class="label">
              <span class="label-text font-medium">Subject</span>
            </label>
            <input
              type="text"
              name="_subject"
              id="subject"
              class="input input-bordered w-full"
              placeholder="What's this about?"
            />
          </div>

          <div>
            <label for="message" class="label">
              <span class="label-text font-medium">Message</span>
            </label>
            <textarea
              name="message"
              id="message"
              required
              rows="5"
              class="textarea textarea-bordered w-full"
              placeholder="Your message..."
            ></textarea>
          </div>

          <button type="submit" class="btn btn-gradient w-full">
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="animate-on-scroll">
        <h2 class="text-xl font-bold mb-4">Other Ways to Reach Me</h2>
        <div class="space-y-4">
          {SOCIAL_LINKS.email && (
            <a href={`mailto:${SOCIAL_LINKS.email}`} class="flex items-center gap-3 p-4 rounded-xl bg-base-200 hover:bg-base-300 transition-colors">
              <div class="w-10 h-10 rounded-lg gradient-icon-bg flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </div>
              <div>
                <p class="font-medium text-sm">Email</p>
                <p class="text-base-content/60 text-sm">{SOCIAL_LINKS.email}</p>
              </div>
            </a>
          )}

          <a href={`tel:${PERSON_PHONE.replace(/[^+\d]/g, '')}`} class="flex items-center gap-3 p-4 rounded-xl bg-base-200 hover:bg-base-300 transition-colors">
            <div class="w-10 h-10 rounded-lg gradient-icon-bg flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            </div>
            <div>
              <p class="font-medium text-sm">Phone</p>
              <p class="text-base-content/60 text-sm">{PERSON_PHONE}</p>
            </div>
          </a>

          <div class="flex items-center gap-3 p-4 rounded-xl bg-base-200">
            <div class="w-10 h-10 rounded-lg gradient-icon-bg flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
            </div>
            <div>
              <p class="font-medium text-sm">Location</p>
              <p class="text-base-content/60 text-sm">{PERSON_LOCATION}</p>
            </div>
          </div>

          {SOCIAL_LINKS.github && (
            <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-4 rounded-xl bg-base-200 hover:bg-base-300 transition-colors">
              <div class="w-10 h-10 rounded-lg gradient-icon-bg flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
              </div>
              <div>
                <p class="font-medium text-sm">GitHub</p>
                <p class="text-base-content/60 text-sm">github.com/idoroe</p>
              </div>
            </a>
          )}

          {SOCIAL_LINKS.linkedin && (
            <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-4 rounded-xl bg-base-200 hover:bg-base-300 transition-colors">
              <div class="w-10 h-10 rounded-lg gradient-icon-bg flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </div>
              <div>
                <p class="font-medium text-sm">LinkedIn</p>
                <p class="text-base-content/60 text-sm">linkedin.com/in/emmanuel-idoro</p>
              </div>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
