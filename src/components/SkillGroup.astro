---
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div class="card bg-base-200 glow-card gradient-border p-5">
  <h3 class="font-semibold text-sm uppercase tracking-wider text-base-content/50 mb-3">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="badge badge-lg bg-base-100 border-base-300">{skill}</span>
    ))}
  </div>
</div>
