---
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";

const projects = await getCollection("projects");
const featured = projects
  .filter((p) => p.data.featured)
  .sort((a, b) => a.data.sortOrder - b.data.sortOrder)
  .slice(0, 3);
---

<section class="py-12 animate-on-scroll">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold">Featured Projects</h2>
    <a href="/projects" class="text-primary hover:underline text-sm font-medium">
      View all &rarr;
    </a>
  </div>

  {featured.length === 0 ? (
    <p class="text-base-content/60">No featured projects yet. Add <code>featured: true</code> to your project frontmatter.</p>
  ) : (
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {featured.map((project) => (
        <a
          href={`/projects/${createSlug(project.data.title, project.slug)}`}
          class="card bg-base-200 card-hover overflow-hidden group"
        >
          {project.data.heroImage && (
            <figure class="h-44 overflow-hidden">
              <img
                src={project.data.heroImage}
                alt={project.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </figure>
          )}
          <div class="p-5">
            <div class="flex flex-wrap gap-1.5 mb-2">
              {project.data.tags.slice(0, 3).map((tag) => (
                <span class="badge badge-sm badge-outline badge-primary">{tag}</span>
              ))}
            </div>
            <h3 class="font-semibold text-lg mb-1">{project.data.title}</h3>
            <p class="text-sm text-base-content/60 line-clamp-2">{project.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  )}
</section>
