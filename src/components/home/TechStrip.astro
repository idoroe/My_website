---
const techCategories = [
  {
    label: "Languages",
    items: ["Python", "Java", "SQL", "C", "C++", "JavaScript", "TypeScript", "C#", "HTML", "CSS"],
  },
  {
    label: "Frameworks & Libraries",
    items: ["React", "Django", "FastAPI", "Flask", "REST APIs", "scikit-learn"],
  },
  {
    label: "Tools & Technologies",
    items: ["AWS", "Docker", "Docker Compose", "dbt", "DuckDB", "Git", "GitHub", "GitHub Actions", "Prometheus", "Grafana", "Trivy", "WebSockets", "Figma", "Postman", "Microsoft Excel", "Microsoft Teams"],
  },
];
---

<section class="py-12 animate-on-scroll">
  <h2 class="text-2xl font-bold mb-6">Tech Stack</h2>
  <div class="space-y-4">
    {techCategories.map((cat, i) => (
      <div class="animate-slide-left" style={`animation-delay: ${i * 0.08}s;`}>
        <span class="text-sm font-medium text-base-content/50 uppercase tracking-wider">{cat.label}</span>
        <div class="flex flex-wrap gap-2 mt-2">
          {cat.items.map((tech) => (
            <span class="badge badge-lg bg-base-200 border-base-300 text-base-content/80 hover:border-primary/40 transition-colors">{tech}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
