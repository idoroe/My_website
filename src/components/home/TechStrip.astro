---
// TODO: Customize your tech stack categories and items
const techCategories = [
  {
    label: "Languages",
    items: ["Python", "TypeScript", "Java", "C++", "SQL"],
  },
  {
    label: "Frameworks",
    items: ["React", "Next.js", "Node.js", "Spring Boot", "Astro"],
  },
  {
    label: "Data & ML",
    items: ["TensorFlow", "Pandas", "PostgreSQL", "MongoDB"],
  },
  {
    label: "DevOps & Cloud",
    items: ["Docker", "AWS", "GitHub Actions", "Linux"],
  },
];
---

<section class="py-12 animate-on-scroll">
  <h2 class="text-2xl font-bold mb-6">Tech Stack</h2>
  <div class="space-y-4">
    {techCategories.map((cat) => (
      <div>
        <span class="text-sm font-medium text-base-content/50 uppercase tracking-wider">{cat.label}</span>
        <div class="flex flex-wrap gap-2 mt-2">
          {cat.items.map((tech) => (
            <span class="badge badge-lg bg-base-200 border-base-300 text-base-content/80">{tech}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
