---
import { PERSON_NAME, PERSON_TITLE, PERSON_TAGLINE } from "../../config";
---

<section class="py-12 md:py-20">
  <div class="max-w-3xl">
    <p class="text-primary font-medium mb-2 animate-fade-in">Hello, I'm</p>
    <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-fade-in-up">
      {PERSON_NAME}
    </h1>
    <p class="text-xl md:text-2xl text-base-content/70 font-medium mb-2 animate-fade-in-up" style="animation-delay: 0.1s;">
      {PERSON_TITLE}
    </p>
    <p class="text-lg text-base-content/60 mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
      {PERSON_TAGLINE}
    </p>
    <div class="flex flex-wrap gap-3 animate-fade-in-up" style="animation-delay: 0.3s;">
      <a href="/projects" class="btn btn-primary">
        View Projects
      </a>
      <a href="/resume" class="btn btn-outline btn-primary">
        Resume
      </a>
      <a href="/contact" class="btn btn-ghost">
        Contact Me
      </a>
    </div>
  </div>
</section>
